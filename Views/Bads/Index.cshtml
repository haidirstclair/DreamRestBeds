@model IEnumerable<DreamRestBeds.Models.Bads>

@{
    ViewData["Title"] = "Products";
}

<h1>Our Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div style="overflow-x: auto; color:white;">
    <table class="table" style="color:white;">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PictureUrl)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warranty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryOfOrigin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssemblyRequired)
            </th>
            

            <th>
                @Html.DisplayNameFor(model => model.SizeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           <td>
           <img src="@item.PictureUrl" alt="Bed Image" style="width: 100px; height: auto;" />
           </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Warranty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryOfOrigin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssemblyRequired)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SizeType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
